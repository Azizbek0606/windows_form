<Window x:Class="custom_control_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:custom_control_2"
        xmlns:cleareableTetxBox="clr-namespace:custom_control_2.view.cleareableTetxBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid Background="DarkSeaGreen">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <cleareableTetxBox:UserControl1 Margin="10" Placeholder="User Name"/>
        <cleareableTetxBox:UserControl1 Margin="10" Grid.Row="1" Placeholder="First Name"/>
        <cleareableTetxBox:UserControl1 Margin="10" Grid.Row="2" Placeholder="Last Name"/>
        <cleareableTetxBox:UserControl1 Margin="10" Grid.Row="3" Placeholder="Email"/>
        <cleareableTetxBox:UserControl1 Margin="10" Grid.Row="5" Placeholder="Phone"/>
    </Grid>
</Window>
